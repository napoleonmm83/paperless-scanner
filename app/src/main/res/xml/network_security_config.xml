<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
    Allow cleartext (HTTP) traffic for all domains.
    Required for self-hosted Paperless-ngx instances without HTTPS.
    The app prefers HTTPS but falls back to HTTP when needed.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system CA certificates -->
            <certificates src="system" />
            <!-- Trust user-installed CA certificates for self-signed certs -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
