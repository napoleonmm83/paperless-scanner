<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_quick_scan_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- Top row: Camera + Gallery (fills half height) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Camera button (fills half width) -->
        <LinearLayout
            android:id="@+id/widget_btn_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:background="@drawable/widget_button_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/widget_action_camera"
                android:src="@drawable/ic_widget_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/widget_action_camera"
                android:textColor="@color/widget_text_secondary"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Gallery button (fills half width) -->
        <LinearLayout
            android:id="@+id/widget_btn_gallery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:background="@drawable/widget_button_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/widget_action_gallery"
                android:src="@drawable/ic_widget_gallery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/widget_action_gallery"
                android:textColor="@color/widget_text_secondary"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom row: File (fills half height, full width) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/widget_btn_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/widget_button_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/widget_action_file"
                android:src="@drawable/ic_widget_file" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/widget_action_file"
                android:textColor="@color/widget_text_secondary"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
