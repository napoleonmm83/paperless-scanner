<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_combined_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Top row: Quick Actions (Camera + Gallery) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Camera button -->
        <LinearLayout
            android:id="@+id/widget_combined_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="3dp"
            android:background="@drawable/widget_button_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/widget_action_camera"
                android:src="@drawable/ic_widget_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/widget_action_camera"
                android:textColor="@color/widget_text_secondary"
                android:textSize="9sp" />
        </LinearLayout>

        <!-- Gallery button -->
        <LinearLayout
            android:id="@+id/widget_combined_gallery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:background="@drawable/widget_button_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/widget_action_gallery"
                android:src="@drawable/ic_widget_gallery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/widget_action_gallery"
                android:textColor="@color/widget_text_secondary"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/widget_border" />

    <!-- Bottom row: Status (clickable â†’ SyncCenter) -->
    <LinearLayout
        android:id="@+id/widget_combined_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_button_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_cloud_upload"
            android:tint="@color/widget_icon_tint" />

        <TextView
            android:id="@+id/widget_combined_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/widget_no_pending"
            android:textColor="@color/widget_text_secondary"
            android:textSize="10sp" />

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/widget_combined_status_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_widget_status_online" />

    </LinearLayout>

</LinearLayout>
